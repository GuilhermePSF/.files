# git

alias gs='git status'                         # Show current status
alias ga='git add'                            # Add a specific file
alias gaa='git add .'                         # Add all files
alias gc='git commit -m'                      # Commit with message
alias gcm='git commit'                        # Commit using editor
alias gca='git commit --amend'                # Amend last commit
alias gco='git checkout'                      # Switch branches
alias gb='git branch'                         # List branches
alias gbd='git branch -d'                     # Delete branch
alias gcl='git clone'                         # Clone repository
alias gpl='git pull'                          # Pull latest changes
alias gp='git push'                           # Push commits
alias gpf='git push --force'                  # Force push
alias gpo='git push origin'                   # Push to origin
alias gplo='git pull origin'                  # Pull from origin
alias gl='git log --oneline --graph --all'    # Log with graph
alias glo='git log --oneline'                 # Simple log
alias gstash='git stash'                      # Stash changes
alias gstashp='git stash pop'                 # Apply stash
alias gdiff='git diff'                        # Show changes
alias gclean='git clean -fd'                  # Clean untracked files
alias grs='git restore'                       # Restore file
alias grss='git restore --staged'             # Unstage file
alias gwip='git commit -m "WIP"'              # Quick WIP commit
alias guncommit='git reset --soft HEAD~1 && grss .'     # Undo last commit (keep changes)
alias gh='git log --pretty=oneline --abbrev-commit'  # Abbreviated log

# GitHub CLI aliases (if using `gh`)
alias gpr='gh pr create --fill'               # Create pull request
alias gprv='gh pr view --web'                 # View PR in browser
alias gri='gh repo view --web'                # View repo in browser
alias gcoi='gh pr checkout'                   # Checkout PR by number
